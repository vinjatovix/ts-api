{
  "name": "ts-api",
  "version": "1.3.0",
  "license": "MIT",
  "author": "Vinjatovix",
  "description": "API/REST in TS",
  "homepage": "https://github.com/vinjatovix/ts-api#readme",
  "engines": {
    "node": ">=18.2.1",
    "npm": ">=8.19.2"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:clean": "rm -r dist; exit 0",
    "build:di": "find ./src -type f \\( -name '*.json' -o -name '*.yml' -o -name '*.yaml' -o -name '*.html' -o -name '*.png' -o -name '*.env' \\) -exec rsync --relative {} dist/ \\;",
    "build:tsc": "tsc -p tsconfig.prod.json --sourceMap false",
    "check-dependencies": "madge --circular ./src",
    "dev": "cross-env NODE_ENV=local ts-node-dev --ignore-watch node_modules ./src/apps/apiApp/start.ts",
    "docker:local": "npm run build && docker-compose build && docker-compose up",
    "docker:mongo": "docker-compose -f ./docker/docker-compose.yml up --build -d",
    "newman:local": "node_modules/newman/bin/newman.js run ./doc/postman/collections/ts-api.json -e ./doc/postman/environments/local.postman_environment.json",
    "newman": "node_modules/newman/bin/newman.js run ./doc/postman/collections/ts-api.json -e ./doc/postman/environments/pre.postman_environment.json",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "start": "node ./dist/src/apps/apiApp/start.js",
    "start:local": "npm run build && cross-env NODE_ENV=local node ./dist/src/apps/apiApp/start.js",
    "pre-commit": "lint-staged",
    "prepare-release": "./scripts/update_readme_version.sh",
    "restoreDB": "./docker/mongo/scripts/restoreDB.sh",
    "restoreDump": "./docker/mongo/scripts/restoreDump.sh",
    "test": "npm run test:clean:coverage && npm run test:unit && nyc --reporter=lcov --reporter=text-summary npm run test:features && npm run test:combined && npm run test:clean:repo",
    "test:clean:coverage": "rm -rf coverage && rm -rf .nyc_output; exit 0",
    "test:clean:repo": "rm -rf fileDb/*.repo; exit 0",
    "test:features": "cross-env NODE_ENV=test PORT=3377 cucumber-js -p apiApp",
    "test:unit": "cross-env NODE_ENV=test PORT=3378 jest --detectOpenHandles --forceExit",
    "test:combined": "nyc merge .nyc_output 'coverage/*.json' && nyc report --reporter=text-lcov > coverage/lcov.info"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commit-message-validator"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "npm run lint:fix"
    ]
  },
  "config": {
    "commit-message-validator": {
      "pattern": "^\\[GH-[\\d]+\\]\\s.*$",
      "errorMessage": "Invalid commit message. Valid example: [GH-123] feat(api): add new feature"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vinjatovix/ts-api.git"
  },
  "bugs": {
    "url": "https://github.com/vinjatovix/ts-api/issues"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "bson": "^6.1.0",
    "convict": "^6.2.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "express-validator": "^7.0.1",
    "glob": "^10.3.10",
    "helmet": "^7.0.0",
    "http-status": "^1.7.0",
    "mongodb": "^4.0.0",
    "node-dependency-injection": "^2.7.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "uuid-validate": "^0.0.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@types/chai": "^4.3.8",
    "@types/chance": "^1.1.4",
    "@types/convict": "^6.1.4",
    "@types/cors": "^2.8.14",
    "@types/errorhandler": "^1.5.1",
    "@types/express": "^4.17.19",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.14",
    "@types/uuid-validate": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "chai": "^4.3.10",
    "chance": "^1.1.11",
    "commit-message-validator": "^1.0.2",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "istanbul": "^0.4.5",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "15.0.0",
    "madge": "^6.1.0",
    "newman": "^6.0.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  }
}
