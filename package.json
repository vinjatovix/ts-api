{
  "name": "ts-api",
  "version": "1.2.1",
  "license": "MIT",
  "author": "Vinjatovix",
  "description": "API/REST in TS",
  "homepage": "https://github.com/vinjatovix/ts-api#readme",
  "engines": {
    "node": ">=18.2.1",
    "npm": ">=8.19.2"
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:clean": "rm -r dist; exit 0",
    "build:di": "find ./src -type f \\( -name '*.json' -o -name '*.yml' -o -name '*.yaml' -o -name '*.html' -o -name '*.png' -o -name '*.env' \\) -exec rsync --relative {} dist/ \\;",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "check-dependencies": "madge --circular ./src",
    "dev": "cross-env NODE_ENV=local ts-node-dev --ignore-watch node_modules ./src/apps/apiApp/backend/start.ts",
    "docker": "npm run build && docker-compose build && docker-compose up",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "start": "node ./dist/src/apps/apiApp/backend/start.js",
    "start:local": "npm run build && cross-env NODE_ENV=local node ./dist/src/apps/apiApp/backend/start.js",
    "pre-commit": "lint-staged",
    "prepare-release": "./scripts/update_readme_version.sh",
    "test": "npm run test:unit && npm run test:features && npm run test:combined",
    "test:features": "nyc --reporter=lcov --reporter=text-summary cross-env NODE_ENV=test PORT=3377 cucumber-js -p apiApp",
    "test:unit": "cross-env NODE_ENV=test PORT=3378 jest --detectOpenHandles --forceExit --coverage",
    "test:combined": "nyc merge .nyc_output 'coverage/*.json' && nyc report --reporter=lcov --reporter=text-summary"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "npm run lint:fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vinjatovix/ts-api.git"
  },
  "bugs": {
    "url": "https://github.com/vinjatovix/ts-api/issues"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "glob": "^10.3.10",
    "helmet": "^7.0.0",
    "http-status": "^1.7.0",
    "node-dependency-injection": "^2.7.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "@types/chai": "^4.3.6",
    "@types/cors": "^2.8.14",
    "@types/errorhandler": "^1.5.1",
    "@types/express": "^4.17.18",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "chai": "^4.3.10",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "istanbul": "^0.4.5",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "14.0.1",
    "madge": "^6.1.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  }
}
