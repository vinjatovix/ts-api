{
  "name": "ts-api",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=18.2.1",
    "npm": ">=8.19.2"
  },
  "scripts": {
    "check-dependencies": "madge --circular ./src",
    "dev:api": "cross-env NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/apps/apiApp/backend/start.ts",
    "start:api": "cross-env NODE_ENV=production ts-node ./src/apps/apiApp/backend/start.ts",
    "start": "node ./dist/src/apps/apiApp/backend/start.js",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "pre-commit": "lint-staged",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "find ./src -type f \\( -name '*.json' -o -name '*.yml' -o -name '*.yaml' -o -name '*.html' -o -name '*.png' -o -name '*.env' \\) -exec rsync --relative {} dist/ \\;",
    "build:clean": "rm -r dist; exit 0",
    "test": "npm run test:unit && npm run test:features",
    "test:features": "cross-env NODE_ENV=test cucumber-js -p apiApp_backend",
    "test:unit": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "npm run lint:fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vinjatovix/ts-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vinjatovix/ts-api/issues"
  },
  "homepage": "https://github.com/vinjatovix/ts-api#readme",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "glob": "^10.3.4",
    "helmet": "^7.0.0",
    "http-status": "^1.7.0",
    "node-dependency-injection": "^2.7.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.5.1",
    "@types/chai": "^4.3.6",
    "@types/cors": "^2.8.14",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "chai": "^4.3.10",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "10.5.4",
    "madge": "^6.1.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  }
}
